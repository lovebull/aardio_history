//[数据库配置文件,支持多个数据库]

namespace config.database

/*
数据库配置
*/

namespace mysql{
	driver = "mysql";
	host = "127.0.0.1";
	username = "root";
	password = "123456";
	dbname = "carlmvc";
	charset = "utf8mb4";		//连接字符集，utf8mb4需5.5以上版本
	port = 3306;
	cache = true;				//是否启用数据库连接缓存,true每个cgi进程只开启一个连接,false每次执行sql创建新连接执行后并关闭
}

namespace mssql{
	driver = "mssql";			//所使用的数据库支持, 三种数据库：mssql,mysql,oracle
	host = "127.0.0.1";
	msname = "";				//实例名，只对mssql数据库有效
	username = "sa";
	password = "123456";
	dbname = "carlmvc";
	port = 1433;
	cache = true;				//是否启用数据库连接缓存,true每个cgi进程只开启一个连接,false每次执行sql创建新连接执行后并关闭
}

