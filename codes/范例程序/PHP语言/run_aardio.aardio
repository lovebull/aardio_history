//在PHP中自由调用aardio语言

import php;
import console;
 
//PHP代码
phpcode =/* 
	$ret = aardio("
		import win;
		import web.json;
		
		win.msgbox('我是 aardio 代码');
		return web.json.stringify({a=123;b=456});
	")
*/ 

//运行PHP代码,返回表达式的值
var ret = php.eval(phpcode) 
console.log( ret );

console.pause();

//================================
//请注意: aardio 返回给PHP的值都是字符串类型
//aardio 代码使用 return 语句返回值。